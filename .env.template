# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# AWS SES Configuration (Email Service)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-2
SES_SENDER_EMAIL=your-email@yourdomain.com

# AWS SNS Configuration (SMS Service)
# AWS credentials above are sufficient for SNS SMS

# Email configuration (SMTP - Gmail)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here

# OpenAI Configuration for AI IVR
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Realtime API Configuration
OPENAI_REALTIME_MODEL=gpt-4o-mini-realtime-preview-2024-12-17
OPENAI_REALTIME_VOICE=alloy

# AI Configuration for LangGraph and RAG
AI_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# RAG Configuration
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_PERSIST_DIRECTORY=./data/rag_db

# PostgreSQL Database Configuration
POSTGRES_HOST=your-database-host.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password

# Main Database Configuration
DB_HOST=your-database-host.rds.amazonaws.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_SSL_MODE=prefer
DB_SCHEMA=public

# Database Proxy Configuration (for Lambda)
PROXY_API_URL=http://your-proxy-url:8080
PROXY_API_KEY=your_proxy_api_key_here
USE_PROXY=true

# Local Development (direct DB access)
LOCAL_DEVELOPMENT=false

# Local Storage for Call Recordings and Transcriptions
CALL_RECORDINGS_PATH=./call_recordings
CALL_TRANSCRIPTIONS_PATH=./call_transcriptions

# LangGraph Configuration
LANGGRAPH_ENABLE=true
LANGGRAPH_CHECKPOINTER=memory

# WhatsApp Sandbox (if needed)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# FastAPI Settings
HOST=0.0.0.0
PORT=8000
DEBUG=True
